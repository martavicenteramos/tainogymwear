var productPrice = document.getElementById("order-price-<%= @order_product.id %>");
var remove = document.getElementById("order-quantity-<%= @order_product.id %>");
var totalPrice = document.getElementById("order-total-value");

if (remove.innerHTML === "1") {
  document.getElementById("order-card-<%= @order_product.id %>").style.display = "none";
  totalPrice.innerHTML = Number(parseInt(totalPrice.textContent) - <%= @order_product.product.price %>).toFixed(2).replace('.', ',');
} else {
  remove.innerHTML = parseInt(remove.textContent) - 1;
  productPrice.innerHTML = Number(parseInt(productPrice.textContent) - <%= @order_product.product.price %>).toFixed(2).replace('.', ',');
  totalPrice.innerHTML = Number(parseInt(totalPrice.textContent) - <%= @order_product.product.price %>).toFixed(2).replace('.', ',');
}

