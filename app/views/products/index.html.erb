<div class="black-friday-banner">
  <h1><i class="fa fa-truck"></i> &nbsp &nbsp Free shipping for orders over €90* &nbsp &nbsp <i class="fas fa-gifts"></i></h1>
</div>
<div id="mySidebar" class="sidebar mt-5">
  <div class="p-3">
    <div class="search-elements prod-index-form">
      <h4>Shop by Category</h4>
      <%= simple_form_for @filter, url: { controller: 'products', action: 'index' }, html: {novalidate: true, class: "no-bs-validation"}, method: :get do |f| %>
        <%= f.input :cut, as: :select, required: false, collection: Cut.all, value_method: :name %>
        <%= f.input :type, as: :select, required: false, collection: ProductType.all,value_method: :name %>
        <%= f.input :style, as: :check_boxes, include_hidden: false, required: false, collection: Style.all, value_method: :name %>
        <%= f.input :colour, as: :check_boxes, include_hidden: false, required: false, collection: Colour.all, value_method: :name %>
        <%= f.submit :SEARCH, class: "small-btn btn-center gray-back" %>
      <% end %>
    </div>
  </div>
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
</div>

<div id="main">
  <button class="small-btn gray-back" onclick="openNav()"><i class="fas fa-filter"></i> Filter</button>
</div>
<div class="t-container">
  <div class="row">
  <div class="left-side-bar col-lg-2">
    <div class="search-elements prod-index-form">
      <h4>Shop by Category</h4>
      <%= simple_form_for @filter, url: { controller: 'products', action: 'index' }, html: {novalidate: true, class: "no-bs-validation"}, method: :get do |f| %>
        <%= f.input :cut, as: :select, required: false, collection: Cut.all, value_method: :name %>
        <%= f.input :type, as: :select, required: false, collection: ProductType.all,value_method: :name %>
        <%= f.input :style, as: :check_boxes, include_hidden: false, required: false, collection: Style.all, value_method: :name %>
        <%= f.input :colour, as: :check_boxes, include_hidden: false, required: false, collection: Colour.all, value_method: :name %>
        <%= f.submit :SEARCH, class: "small-btn btn-center gray-back" %>
      <% end %>
    </div>
  </div>

  <% if @products.first.nil? %>
    <h2>Sorry we havent find any product matching your search.</h2>
  <% end %>
    <div class="cards col-lg-10">
      <%= render 'products/product_list', products: @products %>
    </div>
  </div>
</div>
<br>
