<div class="container">
  <% if @order.total_value == 0 %>
    <h2>Your cart is empty!</h2>
  <% else %>
  <div class="mt-3">
    <% @order.order_products.each do |order_product| %>
      <div class="mini-card-product">
        <div class="mini-card-image">
          <%= cl_image_tag order_product.product.pictures.first.url %>
        </div>
        <div class="mini-card-product-infos">
          <h2><%= order_product.product.name %></h2>
          <h5>Size: <%= order_product.size %></h5>
          <div class="quantity-counter">
            <div class="counter-div"><button type="button" class="btn-counter-add">+</button></div>
            <div class="counter-middle"><p><%= order_product.quantity %></p></div>
            <div class="counter-div"><button type="button" class="btn-counter-remove">-</button></div>
          </div>
          <%= link_to "Remove", order_product_path(order_product), method: :delete, class:"rm-text" %>
          <h5 class="mini-card-price"><%= order_product.quantity * order_product.product.price %> €</h5>
        </div>
      </div>
    <% end %>
    <div class="cart-subtotal">
      <h1>TOTAL</h1>
      <h2> <%= @order.total_value %> €</h2>
    </div>
      <%= link_to "checkout", edit_order_path(@order), class: "blue-btn checkout-btn" %>
    <% end %>
  </div>
</div>
