<div class="container">
  <% if @order.nil? %>
    <h2>Your cart is empty!</h2>
  <% else %>
    <% @order.order_products.each do |order_product| %>
      <p><%= order_product.quantity %>x <%= order_product.product.name %> <%= order_product.size %></p>
      <p><%= order_product.quantity * order_product.product.price %></p>
      <%= link_to "delete", order_product_path(order_product), method: :delete %>
    <% end %>
  <% end %>
  <div>
    <p><%= @order.total_value %></p>
  </div>
  <%= form_tag checkout_path do %>
    <%= hidden_field_tag 'order', @order_id %>
    <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
  <% end %>
</div>
