<div class="container">
  <% if @orders.length == 0 %>
    <h2 class="mt-3">You haven't placed any orders.</h2>
    <%= link_to "Return to shop.", products_path %>
  <% else %>
      <h1 class="form-title margin35tb">MY ORDERS</h1>
      <div class="row">
        <div class="d-flex w-100 border-table">
          <h4 class="col-lg-4"><strong>Date</strong></h4>
          <h4 class="col-lg-4"><strong>Amount</strong></h4>
          <h4 class="col-lg-4"></h4>
        </div>
      </div>
    <div class="accordion" id="accordionExample">
    <% @orders.each do |order| %>
      <div class="row my-3">
        <div class="d-flex w-100 border-table d-flex align-items-center">
          <p class="col-lg-4"><%= order.date.strftime("%d %B %Y") %></p>
          <p class="col-lg-4"><%= humanized_money_with_symbol order.total_value %></p>
          <p class="col-lg-4" data-toggle="collapse" data-target="#collapse<%= order.id %>" aria-expanded="true" aria-controls="collapseOne">Check order</p>
        </div>
      </div>
      <div id="collapse<%= order.id %>" class="collapse w-100" aria-labelledby="headingOne" data-parent="#accordionExample">
        <div class="row">
          <div class="w-100">
            <% order.order_products.each do |order_product| %>
            <div class="mini-card-product" id="order-card-<%= order_product.id %>">
              <div class="col-lg-8 d-flex">
                <div class="mini-card-image">
                  <%= cl_image_tag order_product.product.pictures.first.url %>
                </div>
                <div>
                  <h2><%= order_product.product.name %></h2>
                  <h5>SIZE:<%= order_product.size %></h5>
                  <h5>PRICE(uni): <%= order_product.product.price %></h5>
                  <h5>Quantity: <%= order_product.quantity %></h5>
                </div>
              </div>
              <div class="col-lg-4">
                <h5 class="mini-card-price"><span id="order-price-<%= order_product.id %>"><%= order_product.quantity * order_product.product.price %></span> â‚¬</h5>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  <% end %>
</div>





