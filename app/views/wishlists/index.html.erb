<h1 class="form-title">My Wishlist</h1>
<br>
<div class="container">
  <% if @wishlists == 0 %>
    <h2>Your wishlist is still empty!</h2>
  <% else %>
  <div class="mt-3">
    <% @wishlists.each do |wishlist| %>
      <div class="mini-card-product">
        <div class="mini-card-image">
          <%= link_to product_path(wishlist.product.id) do%>
          <div class="mini-card-image">
            <img src="<%= wishlist.product.pictures.first.url %>" />
          </div>
          <% end %>

        </div>
        <div class="mini-card-product-infos">
          <h2><%= wishlist.product.name %></h2>
          <h5 class="mini-card-price"><%= wishlist.product.price %> â‚¬</h5>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>
</div>


